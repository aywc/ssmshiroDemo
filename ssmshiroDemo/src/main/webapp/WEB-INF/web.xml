    <location>/WEB-INF/file/405.jsp</location>
  </error-page>
  <error-page>
    &lt;!&ndash; 内部错误 &ndash;&gt;
    <error-code>500</error-code>
    <location>/WEB-INF/file/500.jsp</location>
  </error-page>-->

</web-app>
